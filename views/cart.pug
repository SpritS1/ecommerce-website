doctype html
html
  include partials/head.pug
  link(rel='stylesheet' type='text/css' href='/styles/cart.css')


  body
    include partials/navbar.pug
    .content-wrapper
      .main
        section.cart 
            if cart.cartItems.length === 0
                h1 Your cart is empty

            else if cart.cartItems.length > 0
                h1 Your cart
                .cart-items 
                    each item in cart.cartItems
                        .cart-item
                            img(src=`${item.product.imageUrl}` alt='product image')
                            .item-info 
                                p.title #{item.product.name}
                                p.price Price: 
                                    b #{item.product.price.value}
                            .right
                                .change-amount
                                    i.far.fa-arrow-alt-circle-left.fa-lg
                                    p 
                                        b #{item.quantity}
                                    i.far.fa-arrow-alt-circle-right.fa-lg
                                i.fas.fa-trash-alt.fa-lg.remove-item
                .order-summary
                    .subtotal 
                        p.subtotal Subtotal: 
                        b #{cart.subTotal} PLN
                    .shipping
                        p.shipping Shipping: 
                        b 20 PLN
                    hr
                    .total
                        p.total Total: 
                        b 220 PLN
                button.btn-submit Checkout

